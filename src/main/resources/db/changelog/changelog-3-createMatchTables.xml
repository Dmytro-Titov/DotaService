<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="dmytro">
        <createTable tableName="current_matches">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="dmytro">
        <createTable tableName="match_heroes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hero_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="current_match_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="match_heroes"
          baseColumnNames="hero_id"
          referencedTableName="heroes"
          referencedColumnNames="id"
          constraintName="fk_matchhero_hero"/>

        <addForeignKeyConstraint baseTableName="match_heroes"
          baseColumnNames="current_match_id"
          referencedTableName="current_matches"
          referencedColumnNames="id"
          constraintName="fk_matchhero_currentmatch"/>
    </changeSet>

    <changeSet id="3" author="dmytro">
        <createTable tableName="match_hero_items">
            <column name="match_hero_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="match_hero_items"
          columnNames="match_hero_id,item_id"
          constraintName="pk_match_hero_items"/>

        <addForeignKeyConstraint baseTableName="match_hero_items"
          baseColumnNames="match_hero_id"
          referencedTableName="match_heroes"
          referencedColumnNames="id"
          constraintName="fk_mhi_matchhero"/>

        <addForeignKeyConstraint baseTableName="match_hero_items"
          baseColumnNames="item_id"
          referencedTableName="items"
          referencedColumnNames="id"
          constraintName="fk_mhi_item"/>
    </changeSet>
</databaseChangeLog>
